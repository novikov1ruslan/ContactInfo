<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="icon">@color/icons</item>
        <item name="divider">@color/divider</item>
    </style>

    <style name="Name">
        <item name="android:textColor">@color/name</item>
        <item name="android:textSize">@dimen/contact_name</item>
    </style>

    <style name="InfoType">
        <item name="android:textColor">@color/info_type</item>
        <item name="android:textSize">@dimen/info_type</item>
    </style>

    <style name="InfoValue">
        <item name="android:textColor">@color/info_value</item>
        <item name="android:textSize">@dimen/info_value</item>
    </style>

    <style name="StatusText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/status_text</item>
    </style>

</resources>
